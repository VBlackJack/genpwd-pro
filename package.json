{
  "name": "genpwd-pro",
  "version": "2.7.0",
  "type": "module",
  "description": "Générateur de mots de passe sécurisés avec tests intégrés - Architecture modulaire",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "node tools/dev-server.cjs",
    "build": "node tools/build.js",
    "test": "node tools/run_tests.cjs",
    "test:fast": "FAST_ONLY=1 node tools/run_tests.cjs",
    "test:slow": "SLOW_ONLY=1 node tools/run_tests.cjs",
    "test:coverage": "c8 --reporter=html --reporter=text --reporter=lcov node tools/run_tests.cjs",
    "test:coverage:report": "c8 report --reporter=html",
    "test:browser": "node tools/run_tests.cjs && node tools/browser-test.js",
    "test:create-browser": "node tools/run_tests.cjs --create-browser-test",
    "test:watch": "nodemon --watch src --watch tools --exec 'npm run test'",
    "lint": "eslint src/js/**/*.js tools/**/*.js",
    "clean": "rimraf dist/*",
    "start": "npm run dev",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "electron:build:all": "electron-builder -mwl"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "c8": "^10.1.3",
    "chokidar": "^3.5.3",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.56.1",
    "puppeteer": "^24.28.0",
    "rimraf": "^5.0.5"
  },
  "files": [
    "src/",
    "tools/",
    "dictionaries/",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "password",
    "generator",
    "security",
    "cryptography",
    "javascript",
    "testing",
    "automated-testing"
  ],
  "author": "Julien Bombled",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VBlackJack/genpwd-pro.git"
  },
  "bugs": {
    "url": "https://github.com/VBlackJack/genpwd-pro/issues"
  },
  "homepage": "https://github.com/VBlackJack/genpwd-pro#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "testConfig": {
    "testSuiteFile": "tools/test-suite.js",
    "timeout": 60000,
    "retries": 1
  },
  "dependencies": {
    "dompurify": "^3.2.3",
    "hash-wasm": "^4.12.0",
    "kdbxweb": "^2.1.1",
    "tink-crypto": "^0.1.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "build": {
    "appId": "com.julienbombled.genpwdpro",
    "productName": "GenPwd Pro",
    "copyright": "Copyright © 2025 Julien Bombled",
    "files": [
      "src/**/*",
      "assets/**/*",
      "electron-main.cjs",
      "electron-preload.cjs",
      "package.json",
      "node_modules/hash-wasm/**/*",
      "node_modules/kdbxweb/**/*",
      "node_modules/tweetnacl/**/*",
      "node_modules/tweetnacl-util/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GenPwd Pro",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeader": "assets/icon.ico",
      "license": "LICENSE",
      "language": "1036",
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "compression": "maximum",
    "asar": true
  }
}
