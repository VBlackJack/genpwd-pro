{
  "name": "genpwd-pro",
  "version": "3.0.5",
  "type": "module",
  "description": "Gestionnaire de mots de passe Desktop sécurisé - Coffre-fort chiffré, TOTP, Import KeePass",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "node tools/dev-server.cjs",
    "build": "node tools/build.js",
    "test": "node tools/run_tests.cjs",
    "test:fast": "FAST_ONLY=1 node tools/run_tests.cjs",
    "test:slow": "SLOW_ONLY=1 node tools/run_tests.cjs",
    "test:coverage": "c8 --reporter=html --reporter=text --reporter=lcov node tools/run_tests.cjs",
    "test:coverage:report": "c8 report --reporter=html",
    "test:browser": "node tools/run_tests.cjs && node tools/browser-test.js",
    "test:create-browser": "node tools/run_tests.cjs --create-browser-test",
    "test:watch": "nodemon --watch src --watch tools --exec 'npm run test'",
    "test:a11y": "node src/tests/test-accessibility.js",
    "test:fuzz": "node --experimental-vm-modules src/tests/test-import-fuzzing.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:sri": "node tools/generate-sri.cjs",
    "security:sri:html": "node tools/generate-sri.cjs -f html -o sri-manifest.html",
    "lint": "eslint src/**/*.js tools/**/*.js",
    "lint:circular": "madge --circular --extensions js src/js/",
    "lint:deps": "madge --image deps-graph.svg --extensions js src/js/app.js",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "clean": "rimraf dist/*",
    "start": "npm run dev",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "electron:build:all": "electron-builder -mwl"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.17.0",
    "axe-core": "^4.11.0",
    "c8": "^10.1.3",
    "chokidar": "^4.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.17.0",
    "madge": "^8.0.0",
    "nodemon": "^3.1.9",
    "playwright": "^1.56.1",
    "rimraf": "^6.0.1"
  },
  "files": [
    "src/",
    "tools/",
    "dictionaries/",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "password",
    "generator",
    "security",
    "cryptography",
    "javascript",
    "testing",
    "automated-testing"
  ],
  "author": "Julien Bombled",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VBlackJack/genpwd-pro.git"
  },
  "bugs": {
    "url": "https://github.com/VBlackJack/genpwd-pro/issues"
  },
  "homepage": "https://github.com/VBlackJack/genpwd-pro#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "testConfig": {
    "testSuiteFile": "tools/test-suite.js",
    "timeout": 60000,
    "retries": 1
  },
  "dependencies": {
    "dompurify": "^3.2.3",
    "electron-updater": "^6.7.3",
    "hash-wasm": "^4.12.0",
    "kdbxweb": "^2.1.1",
    "tink-crypto": "^0.1.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "build": {
    "appId": "com.julienbombled.genpwdpro",
    "productName": "GenPwd Pro",
    "copyright": "Copyright © 2025 Julien Bombled",
    "files": [
      "src/**/*",
      "assets/**/*",
      "electron-main.cjs",
      "electron-preload.cjs",
      "package.json",
      "node_modules/hash-wasm/**/*",
      "node_modules/kdbxweb/**/*",
      "node_modules/tweetnacl/**/*",
      "node_modules/tweetnacl-util/**/*",
      "node_modules/dompurify/**/*",
      "node_modules/tink-crypto/**/*",
      "src/tests/test-suite.js",
      "src/js/test-integration.js"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GenPwd Pro",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "license": "LICENSE",
      "warningsAsErrors": false,
      "perMachine": false
    },
    "fileAssociations": [
      {
        "ext": "gpdb",
        "name": "GenPwd Pro Vault",
        "description": "GenPwd Pro Password Vault",
        "role": "Editor"
      }
    ],
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "compression": "maximum",
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "VBlackJack",
      "repo": "genpwd-pro",
      "releaseType": "release"
    }
  }
}
