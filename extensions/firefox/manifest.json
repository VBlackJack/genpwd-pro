{
  "manifest_version": 2,
  "name": "GenPwd Pro",
  "version": "1.0.0",
  "description": "Générateur de mots de passe sécurisés - Extension Firefox",
  "author": "Julien Bombled",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    },
    "default_title": "GenPwd Pro - Générateur de mots de passe"
  },
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "applications": {
    "gecko": {
      "id": "genpwd-pro@julienbombled.com",
      "strict_min_version": "91.0"
    }
  },
  "homepage_url": "https://github.com/VBlackJack/genpwd-pro"
}
