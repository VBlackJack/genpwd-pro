<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <!-- Network permissions for cloud sync -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GenPwdProApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        <!-- Hardened trust anchors (system CAs only, debug overrides in xml/) -->
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GenPwdPro"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">

        <!--
             Export policy: only components required for widgets, autofill or OAuth deep links
             declare android:exported="true". Everything else (providers, services) remains
             internal and we keep allowBackup disabled to avoid leaking vault content through
             system backups.
        -->

        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GenPwdPro"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- OAuth2 Deep Links for Cloud Providers -->
            <!-- pCloud OAuth2 callback -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="genpwdpro"
                    android:host="oauth"
                    android:path="/pcloud" />
            </intent-filter>

            <!-- ProtonDrive OAuth2 callback -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="genpwdpro"
                    android:host="oauth"
                    android:path="/proton" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.otp.OtpImportActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.GenPwdPro">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="otpauth"
                    android:host="totp" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="otpauth"
                    android:host="hotp" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.otp.OtpQrScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.GenPwdPro"
            android:windowSoftInputMode="adjustResize" />

        <!-- Widget Provider -->
        <receiver
            android:name=".presentation.widget.PasswordWidget"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.julien.genpwdpro.ACTION_GENERATE" />
                <action android:name="com.julien.genpwdpro.ACTION_COPY" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>

        <receiver
            android:name=".presentation.widget.UserUnlockedReceiver"
            android:exported="false"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.USER_UNLOCKED" />
            </intent-filter>
        </receiver>

        <!-- Autofill Service (Android 8+) -->
        <service
            android:name=".autofill.GenPwdAutofillService"
            android:exported="true"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>
            <meta-data
                android:name="android.autofill"
                android:resource="@xml/autofill_service_config" />
        </service>

        <!-- Disable WorkManager default initialization (using custom HiltWorkerFactory) -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>
    </application>
</manifest>
