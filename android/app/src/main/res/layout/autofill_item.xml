<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Icône GenPwd Pro -->
    <ImageView
        android:id="@+id/autofill_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/app_name" />

    <!-- Texte de l'option -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/autofill_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GenPwd Pro - Option 1"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/autofill_subtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entropie: 128 bits"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Indicateur de sécurité -->
    <ImageView
        android:id="@+id/autofill_security_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_lock_lock"
        android:layout_marginStart="8dp"
        android:contentDescription="Sécurisé" />

</LinearLayout>
